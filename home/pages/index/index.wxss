/* pages/index/index.wxss */
/* 最顶端*/
.topest {
  position: relative;
  width: 100%;
  height: 100%;
  padding-bottom: 10rpx;
}


.topest-location {
  position: relative;
  border: 2rpx solid slategrey;
  float: left;
  width: 23%;
  border-radius: 5px;
  margin: 0 1%;

  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
}

.topest-location text {
  margin: 10px auto;
}

.topest-search {
  float: left;
  position: relative;
  width: 50%;
}


.topest-publish {
  position: relative;
  border: 2rpx solid slategrey;
  float: left;
  width: 23%;
  border-radius: 5px;
  margin: 0 1%;

  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;

}





.topest-publish image {

  width: 50rpx;
  height: 50rpx;
  align-self: center;
  margin: 0 0 0 20rpx;
}

.topest-publish text{

  margin: 10px auto;
}



/* 轮播图*/
.carousel image {
  display: block;
  width: 100%;
  height: 100%;
}


/* 搜索框*/
.weui-search-bar {
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  /* background-color: #EFEFF4; */
  border-top: 1rpx solid #FFFFFF;
  border-bottom: 1rpx solid #FFFFFF;
}

.weui-icon-search {
  margin-right: 4px;
  font-size: inherit;
}

.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
}

.weui-search-bar__text {
  display: inline;
  display: inline-block;
  font-size: 16px;
}

.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5px;
  background: #FFFFFF;
  border: 1rpx solid #E6E6EA;
}

.weui-search-bar__box {
  position: relative;
  float: left;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;

}

.weui-search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
}

.weui-search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 3px;
  text-align: center;
  color: #9B9B9B;
  background-color: #EFEFF4;
  /* background: #FFFFFF; */
  line-height: 28px;
}

.weui-search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  white-space: nowrap;
}



/* 分类栏*/
.banner {
  position: sticky;
  top: 0;
  width: 100%;
  height: 80rpx;
  background: #fff;
  white-space: nowrap;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
  z-index: 10;
}

.banner scroll-view {
  height: 100%;
}

.sort {
  position: relative;
  display: inline-block;
  font-size: 32rpx;
  margin-right: 70rpx;
  line-height: 80rpx;
  height: 100%;
}

scroll-view .sort:last-child {
  margin-right: 0rpx;
}

.choose {
  color: #16BA98;
}

.line {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 5rpx;
  border-radius: 10rpx;
  background: #16BA98;
  animation: spread .3s;
}

@keyframes spread {
  0% {
    width: 0;
    left: 50%;
  }

  100% {
    width: 100%;
    left: 0;
  }
}

.place {
  height: 800rpx;
}
